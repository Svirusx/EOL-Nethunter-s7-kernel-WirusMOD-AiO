);


#########################################################################################
# Instalacion
#

setvar("retstatus",
	install(
		"<~inst.1>",
		"<b>"+ini_get("rom_name")+"</b>\n"+
		"<~inst.2>",	
		"@install",	
		"<~inst.3>\n"+
		"<~inst.4>"
	)
);


#########################################################################################
# Final
#


#set Next text fo Finish
ini_set("text_next", "<~text_finish>");


if (prop("abort.prop","abort")=="1") then
	viewbox(
		"",
		"<#selectbg_g><b><~abort.1></b></#>\n\n"+
		"<~abort.2>\n\n"+
		"<~abort.4>",
		"@alert"
	);
else
	viewbox(
		"",
		"<#selectbg_g><b><~final.1></b></#>\n\n"+
		"<~final.2>\n\n"+
		"<~final.4>",
		"@welcome"
	);
endif;




